
@{
    ViewBag.Title = "EditSubGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Edit Subscriber Group</h2>
    @Html.Partial("~/Views/Subscriber/SubscriberTab.cshtml")

    <form>
        <div class="form-group row">
            <label for="list-title" class="col-xs-2 col-form-label">Group Title</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="list-title" value="Family">
            </div>
        </div>
        <div class="form-group row">
            <label for="inviteTextarea" class="col-xs-2 col-form-label">Invite Subscriber</label>
            <div class="col-xs-10">
                <textarea class="form-control" id="inviteTextarea" rows="1" placeholder="Enter name or email address..."></textarea>
                
            </div>
        </div>
        <div class="form-group row">
            <label for="note-detail" class="col-xs-2 col-form-label">Invitation Message</label>
            <div class="col-xs-10">
                <textarea class="form-control" id="note-detail" rows="2"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="note-detail" class="col-xs-2 col-form-label">&nbsp;</label>
            <div class="col-xs-10">
                @Html.ActionLink("Send Invitation", "SubGroupDetails", "Subscriber", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="form-group row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Subscriber Name</th>
                        <th>Status</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Greg Willow</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alan Wong</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alice Smith</td>
                        <td>Collaborator</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Subscriber</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-xs-12">
            @Html.ActionLink("Save Changes", "SubGroupDetails", "Subscriber", null, new { @class = "btn btn-success" })
        </div>
</form>
   
</div>