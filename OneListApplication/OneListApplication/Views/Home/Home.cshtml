@model IEnumerable<OneListApplication.ViewModels.ListViewVM>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/Scripts/app.js"></script>
<script>
    window.onload = function ()
    {
      getCoupons();
      var timer=  setInterval(getCoupons, 30000);

    }
</script>
<main>
<div class="col-md-12">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-12">
                        <h2>
                            Hey, @Html.Raw(User.Identity.Name)
                        </h2>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row" id="listType">
                    <div class="col-md-12 col-sm-12">
                        <!-- Display lists if any-->
                        @if (Model.Count() > 0)
                        {
                            @Html.Partial("~/Views/List/ShowAllList.cshtml", Model)
                        }
                        else {
                            <h3>You have no lists right now</h3>
                            @Html.ActionLink("Create new List", "CreateList", "List")
                        }
                    </div>
                </div>
            </div>

            <div id="coupon" class="col-lg-4 pre-scrollable">
                <h3>Our Specials</h3>
                <span id='value1'>
                   <i class="fa fa-refresh" aria-hidden="true"></i>Loading coupons 
                </span>
            </div>
            <!-- /#page-wrapper -->
        </div>
    </div>
</div>
</main>
