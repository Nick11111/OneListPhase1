
@{
    ViewBag.Title = "CreateList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateList</h2>
@Html.Partial("~/Views/Home/Sidebar.cshtml");
<div class="col-sm-offset-2">
    <ul class="nav nav-pills nav-justified">
        <li>@Html.ActionLink("List management", "ListManagement", "Home")</li>
        <li>@Html.ActionLink("Create List", "CreateList", "Home")</li>
        <li role="presentation"><a href="#">Activity Log</a></li>
    </ul>
    <form>
        <div class="form-group">
            <label for="list-title">Title</label>
            <input type="text" class="form-control" id="list-title" aria-describedby="emailHelp" placeholder="Enter title">
            <small id="titleHelp" class="form-text text-muted">You may change the title later.</small>
        </div>
        <div class="form-group">
            <label for="selectItemGroup">Select Item Group</label>
            <select class="form-control" id="selectItemGroup">
                <option>Grocery Items</option>
                <option>Stationary</option>
                <option>Bill Items</option>
            </select>
        </div>
        <div class="form-group">
            <label for="selectSubscriberGroup">Select Subscriber Group</label>
            <select multiple class="form-control" id="selectSubscriberGroup">
                <option>Family</option>
                <option>Friends</option>
                <option>Co-workers</option>
                <option>Students</option>
            </select>
        </div>
        <div class="form-group">
            <label for="subscriberTextarea">Subscribers</label>
            <textarea class="form-control" id="subscriberTextarea" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label for="itemTextarea">Items</label>
            <textarea class="form-control" id="itemTextarea" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>