
@{
    ViewBag.Title = "ItemGroupDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <h2>Edit Item Group</h2>
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">@Html.ActionLink("Avaliable Items", "ItemManagement", "Item", new { @class = "nav-link active" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Create Item", "CreateItem", "Item", new { @class = "nav-link" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Avaliable Item Group", "ItemGroupManagement", "Item", new { @class = "nav-link" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Create Item Group", "CreateItemGroup", "Item", new { @class = "nav-link" }, null)</li>
    </ul>
    <form>
        <div class="form-group">
            <label for="list-title" class="col-xs-2 col-form-label">Group Name</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="list-title" aria-describedby="emailHelp" placeholder="Grocery Items" required>
            </div>
        </div><br />
        <div class="form-group">
            <label for="subscriberTextarea" class="col-xs-2 col-form-label">Description</label>
            <div class="col-xs-10">
                <textarea class="form-control" id="subscriberTextarea" rows="4">List of weekly grocery items for shopping </textarea>
            </div>
        </div>
        <div class="col-xs-10 col-xs-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
