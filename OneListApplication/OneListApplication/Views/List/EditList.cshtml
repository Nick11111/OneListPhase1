
@{
    ViewBag.Title = "EditList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Home/Sidebar.cshtml");
<div class="col-sm-offset-2">
    <h2>Edit List</h2>
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">@Html.ActionLink("Open Lists", "ListManagement", "Home", new { @class = "nav-link active" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Create List", "CreateList", "List", new { @class = "nav-link" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Completed Lists", "ShowCompleteList", "List", new { @class = "nav-link" }, null)</li>
        <li class="nav-item">@Html.ActionLink("Subscribed Lists", "ShowSubscribedList", "List", new { @class = "nav-link" }, null)</li>
    </ul>

    <form>
        <div class="form-group">
            <label for="list-title" class="col-xs-2 col-form-label">List Title</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="list-title" aria-describedby="emailHelp" value="My Grocery">
            </div>
        </div>
        <div class="form-group">
            <label for="selectListType" class="col-xs-2 col-form-label">Creation Date</label>
            <div class="col-xs-10">
                <p>June 24, 2016</p>
            </div>
        </div>
        <div class="form-group">
            <label for="selectItemGroup" class="col-xs-2 col-form-label">List Type</label>
            <div class="col-xs-10">
                <select class="form-control" id="selectItemGroup">
                    <option>Basic</option>
                    <option>To Do</option>
                    <option>Grocery</option>
                    <option>Task</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <table class="table">
                <thead class="thead-default">
                    <tr>
                        <th>Subscriber</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Greg Willow</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-primary" href="#" role="button">Delete</a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alan Wong</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-primary" href="#" role="button">Delete</a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alice Smith</td>
                        <td>Collaborator</td>
                        <td>
                            <a class="btn btn-primary" href="#" role="button">Delete</a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Subscriber</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <table class="table">
                <thead class="thead-inverse">
                    <tr>
                        <th>List Item</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Avacado x 2</td>
                        <td><input value="2.5"/></td>
                        <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
                    </tr>
                    <tr>
                        <td>Paper towel x 9</td>
                        <td><input value="2.5" /></td>
                        <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
                    </tr>
                    <tr>
                        <td>Oranges</td>
                        <td><input value="9.99" /></td>
                        <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
                    </tr>
                    <tr>
                        <td>Cake Mix</td>
                        <td><input value="13.5" /></td>
                        <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
                    </tr>
                    <tr>
                        <td>Whip Cream</td>
                        <td><input value="15" /></td>
                        <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <label for="itemTextarea" class="col-xs-2 col-form-label"></label>
        <div class="col-xs-12">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <button type="submit" class="btn btn-info">Complete List</button>
        </div>
    </form>

</div>

