
@{
    ViewBag.Title = "EditList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Views/List/_ListSideBar.cshtml")
<div class="col-md-10">
    <h2>Edit List</h2>
    <form>
        <div class="form-group row">
            <label for="list-title" class="col-xs-2 col-form-label">List Title</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="list-title" aria-describedby="emailHelp" value="My Grocery">
            </div>
        </div>
        <div class="form-group row">
            <label for="selectListType" class="col-xs-2 col-form-label">Creation Date</label>
            <div class="col-xs-10">
                <p>June 24, 2016</p>
            </div>
        </div>
        <div class="form-group row">
            <label for="selectItemGroup" class="col-xs-2 col-form-label">List Type</label>
            <div class="col-xs-10">
                <select class="form-control" id="selectItemGroup">
                    <option>Basic</option>
                    <option>To Do</option>
                    <option>Grocery</option>
                    <option>Task</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="inviteTextarea" class="col-xs-2 col-form-label">Invite Subscriber</label>
            <div class="col-xs-10">
                <textarea class="form-control" id="inviteTextarea" rows="1" placeholder="Enter name or email address..."></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="note-detail" class="col-xs-2 col-form-label">Invitation Message</label>
            <div class="col-xs-10">
                <textarea class="form-control" id="note-detail" rows="2"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="note-detail" class="col-xs-2 col-form-label">&nbsp;</label>
            <div class="col-xs-10">
                @Html.ActionLink("Send Invitation", "SubGroupDetails", "Subscriber", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="form-group row">
            <table class="table">
                <thead class="thead-default">
                    <tr>
                        <th>Subscriber</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Greg Willow</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alan Wong</td>
                        <td>Subscriber</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Collaborator</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Alice Smith</td>
                        <td>Collaborator</td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-primary" href="#" role="button">Convert to Subscriber</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group row">
            <table class="table">
                <thead class="thead-inverse">
                    <tr>
                        <th></th>
                        <th>List Item</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" value=""></td>
                        <td>Avacado x 2</td>
                        <td><input value="2.5"/></td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" value=""></td>
                        <td>Paper towel x 9</td>
                        <td><input value="2.5" /></td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" value=""></td>
                        <td>Oranges</td>
                        <td><input value="9.99" /></td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" value=""></td>
                        <td>Cake Mix</td>
                        <td><input value="13.5" /></td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" value=""></td>
                        <td>Whip Cream</td>
                        <td><input value="15" /></td>
                        <td>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <label for="itemTextarea" class="col-xs-2 col-form-label"></label>
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="submit" class="btn btn-success">Complete List</button>
        </div>
</form>

</div>

