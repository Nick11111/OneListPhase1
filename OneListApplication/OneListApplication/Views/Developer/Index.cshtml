<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/app.js"></script>
@{
    ViewBag.Title = "Developer's Guide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <h2 class="col-lg-12 col-lg-offset-1" id="title">Manage your coupons</h2>
    <p class="col-lg-12 col-lg-offset-1">Manage coupons with OneList's Coupon Database</p>
    <div id="Select" class="col-lg-5 col-lg-offset-1">
        <h3 class="col-lg-12 col-lg-offset-1" id="Get Coupons">Show All Coupons</h3>

        <form class="col-lg-12 col-lg-offset-1" method="get" action="api/Coupons">
            <span id='value1' style="display: block;overflow: auto;">(Result)<br /></span>
            <input type="button" value="Get" class="btn-bk" onclick="getCoupons()" />
        </form>
    </div>
    <div class="col-lg-5 col-lg-offset-1" >
        <div id="Create" class="coupon-form">
            <div class="form-horizontal">
                <h3 class="col-md-9 col-md-offset-3 coupon-title" id="Create Cupon">Create Coupon</h3>
                @*<label for="_New Product"><b>Create Coupon</b></label>*@
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Title</label>
                    <div class="col-md-9">
                        <input type="text" id="txtAdd_Title" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Description</label>
                    <div class="col-md-9">
                        <input type="text" id="txtAdd_Description" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Discount Percentage</label>
                    <div class="col-md-9">
                        <input type="text" id="txtAdd_DiscountPercentage" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Retailer ID</label>
                    <div class="col-md-9">
                        <input type="text" id="txtAdd_RetailID" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Starting Date</label>
                    <div class="col-md-9">
                        <input type="date" id="txtAdd_StartDate" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Ending Date</label>
                    <div class="col-md-9">
                        <input type="date" id="txtAdd_EndingDate" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" class="btn-bk" value="Add" onclick="create();" />
                    <div class="col-md-6">
                        <p id="couponCreate" />
                    </div>
                </div>
            </div>
        </div>
        <div id="Update" class="coupon-form">
            <div class="form-horizontal">
                <h3 class="col-md-9 col-md-offset-3 col-xs-12 coupon-title" id="Update Cupon">Update Coupon</h3>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Coupon ID</label>
                    <div class="col-md-9">
                        <input type="text" id="txtUp_CouponID" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Title</label>
                    <div class="col-md-9">
                        <input type="text" id="txtUp_Title" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Description</label>
                    <div class="col-md-9">
                        <input type="text" id="txtUp_Description" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Discount Percentage</label>
                    <div class="col-md-9">
                        <input type="text" id="txtUp_DiscountPercentage" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Retailer ID</label>
                    <div class="col-md-9">
                        <input type="text" id="txtUp_RetailID" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Starting Date</label>
                    <div class="col-md-9">
                        <input type="date" id="txtUp_StartDate" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Ending Date</label>
                    <div class="col-md-9">
                        <input type="date" id="txtUp_EndingDate" size="20" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" class="btn-bk" value="Update" onclick="update();" />
                    <div class="col-md-6">
                        <p id="couponUpdate" />
                    </div>
                </div>
            </div>
        </div>
        <div id="Delete" class="coupon-form">
            <div class="form-horizontal">
                <h3 class="col-md-9 col-md-offset-3 coupon-title" id="Delete Cupon">Delete Coupon</h3>
                <div class="form-group">
                    <label class="control-label col-md-3" for="_ID">Coupon ID</label>
                    <div class="col-md-9">
                        <input type="text" id="txtDelete_CouponID" size="10" />
                        <input type="button" class="btn-bk" value="Delete" onclick="del();" />
                        <p id="couponDelete" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>